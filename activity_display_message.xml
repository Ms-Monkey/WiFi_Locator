<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayMessageActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="30sp" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:padding="3dip"
                android:text="@string/table_wifi_1_Name" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:gravity="right"
                android:padding="3dip"
                android:text="@string/table_wifi_1_MAC" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:gravity="right"
                android:padding="3dip"
                android:text="@string/table_wifi_1_Strength" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:padding="3dip"
                android:text="@string/table_wifi_2_Name" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:gravity="right"
                android:padding="3dip"
                android:text="@string/table_wifi_2_MAC" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:gravity="right"
                android:padding="3dip"
                android:text="@string/table_wifi_2_Strength" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:padding="3dip"
                android:text="@string/table_wifi_3_Name" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:gravity="right"
                android:padding="3dip"
                android:text="@string/table_wifi_3_MAC" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:gravity="right"
                android:padding="3dip"
                android:text="@string/table_wifi_3_Strength" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>
